{% extends 'base.html.twig' %}

{% block title %}Sistema de Inventario - Inicio{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded shadow">
                <div class="container">
                    <h1 class="display-4">
                        <i class="fas fa-warehouse"></i> Bienvenido al Sistema de Inventario
                    </h1>
                    <p class="lead">Gestiona tu inventario de manera eficiente y profesional</p>
                    <a class="btn btn-light btn-lg" href="{{ path('dashboard') }}" role="button">
                        <i class="fas fa-chart-bar"></i> Ir al Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-5">
        <div class="col-md-3 mb-3">
            <div class="card stats-card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h3>{{ total_productos }}</h3>
                    <p class="card-text">Total Productos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stats-card success h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x mb-3"></i>
                    <h3>{{ total_categorias }}</h3>
                    <p class="card-text">Categorías</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stats-card warning h-100">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                    <h3>{{ productos_bajo_stock|length }}</h3>
                    <p class="card-text">Stock Bajo</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card stats-card danger h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <h3>100%</h3>
                    <p class="card-text">Operativo</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Productos Recientes -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock"></i> Productos Recientes
                    </h5>
                </div>
                <div class="card-body">
                    {% if productos_recientes|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Precio</th>
                                        <th>Stock</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for producto in productos_recientes %}
                                        <tr>
                                            <td>
                                                <strong>{{ producto.nombre }}</strong><br>
                                                <small class="text-muted">{{ producto.descripcion|slice(0, 50) }}...</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">Q{{ producto.precio|number_format(2) }}</span>
                                            </td>
                                            <td>
                                                {% if producto.stock > 10 %}
                                                    <span class="badge bg-success">{{ producto.stock }}</span>
                                                {% elseif producto.stock > 0 %}
                                                    <span class="badge bg-warning">{{ producto.stock }}</span>
                                                {% else %}
                                                    <span class="badge bg-danger">{{ producto.stock }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if producto.activo %}
                                                    <span class="badge bg-success">Activo</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No hay productos registrados</p>
                        </div>
                    {% endif %}
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('productos_web') }}" class="btn btn-primary">
                        <i class="fas fa-eye"></i> Ver Todos los Productos
                    </a>
                </div>
            </div>
        </div>

        <!-- Productos con Stock Bajo -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Stock Bajo
                    </h5>
                </div>
                <div class="card-body">
                    {% if productos_bajo_stock|length > 0 %}
                        {% for producto in productos_bajo_stock|slice(0, 5) %}
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                                <div>
                                    <strong>{{ producto.nombre }}</strong><br>
                                    <small class="text-muted">Stock: {{ producto.stock }}</small>
                                </div>
                                <span class="badge bg-warning">¡Alerta!</span>
                            </div>
                        {% endfor %}
                        {% if productos_bajo_stock|length > 5 %}
                            <div class="text-center mt-3">
                                <small class="text-muted">Y {{ productos_bajo_stock|length - 5 }} más...</small>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <p class="text-muted">¡Todo bien! No hay productos con stock bajo</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Accesos Rápidos -->
            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-rocket"></i> Accesos Rápidos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/api/productos" class="btn btn-outline-primary" target="_blank">
                            <i class="fas fa-code"></i> API Productos
                        </a>
                        <a href="/api/usuarios" class="btn btn-outline-secondary" target="_blank">
                            <i class="fas fa-users"></i> API Usuarios
                        </a>
                        <a href="{{ path('dashboard') }}" class="btn btn-outline-info">
                            <i class="fas fa-chart-bar"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .jumbotron {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }
</style>
{% endblock %}
