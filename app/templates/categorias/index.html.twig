{% extends 'base-simple.html.twig' %}

{% block title %}Categorias - Sistema de Inventario{% endblock %}

{% block body %}
    <!-- Header de sección -->
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="section-title">
                    <i class="fas fa-tags"></i>
                    Gestión de Categorías
                </h1>
                <p class="section-stats">Total de categorías: {{ total }}</p>
            </div>
            <a href="{{ path('categorias_nueva') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus me-2"></i>
                Nueva Categoría
            </a>
        </div>
    </div>

    {# Mostrar mensajes flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    
    <!-- Tabla profesional -->
    <div class="table-container">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% if categorias is not empty %}
                    {% for categoria in categorias %}
                    <tr>
                        <td><strong>#{{ categoria.getId }}</strong></td>
                        <td class="fw-bold">{{ categoria.getNombre }}</td>
                        <td>{{ categoria.getDescripcion ?? '-' }}</td>
                        <td>
                            {% if categoria.isActivo %}
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Activa
                                </span>
                            {% else %}
                                <span class="badge bg-danger">
                                    <i class="fas fa-times me-1"></i>Inactiva
                                </span>
                            {% endif %}
                        </td>
                        <td>{{ categoria.getFechaCreacion|date('d/m/Y H:i') }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('categorias_editar', {'id': categoria.getId}) }}" 
                                   class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal"
                                        data-item-id="{{ categoria.getId }}"
                                        data-item-name="{{ categoria.getNombre }}"
                                        data-item-type="categoría">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2"></i><br>
                            No hay categorías registradas
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="text-center mb-3">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-trash-alt text-danger fa-2x"></i>
                        </div>
                    </div>
                    <h6 class="text-center mb-3">¿Estás seguro de que deseas eliminar esta <span id="itemType">categoría</span>?</h6>
                    <p class="text-center text-muted mb-0">
                        <strong id="itemName"></strong>
                        <br>
                        <small>Esta acción no se puede deshacer.</small>
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary btn-lg px-4" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-trash me-2"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Configurar el modal de eliminación
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            const deleteForm = document.getElementById('deleteForm');
            const itemName = document.getElementById('itemName');
            const itemType = document.getElementById('itemType');

            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const itemId = button.getAttribute('data-item-id');
                const name = button.getAttribute('data-item-name');
                const type = button.getAttribute('data-item-type');

                itemName.textContent = name;
                itemType.textContent = type;
                deleteForm.action = '/categorias/' + itemId + '/eliminar';
            });
        });
    </script>
{% endblock %}
