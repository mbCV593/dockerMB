{% extends 'base.html.twig' %}

{% block title %}Categorias - Sistema de Inventario{% endblock %}

{% block body %}
    <h1>Gestion de Categorias</h1>
    
    <p>Total de categorias: {{ total }}</p>
    
    <table style="width: 100%; border: 1px solid #ccc; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background: #f5f5f5;">
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">ID</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Nombre</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Descripcion</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Fecha</th>
            </tr>
        </thead>
        <tbody>
            {% for categoria in categorias %}
            <tr>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.id }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.nombre }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.descripcion }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.fecha }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}