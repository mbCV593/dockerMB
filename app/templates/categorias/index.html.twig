{% extends 'base.html.twig' %}

{% block title %}Categorias - Sistema de Inventario{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>üìÅ Gesti√≥n de Categor√≠as</h1>
        <a 
            href="{{ path('categorias_nueva') }}" 
            style="background: #28a745; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;"
        >
            ‚ûï Nueva Categor√≠a
        </a>
    </div>

    {# Mostrar mensajes flash #}
    {% for message in app.flashes('success') %}
        <div style="background: #d4edda; color: #155724; padding: 10px; border: 1px solid #c3e6cb; border-radius: 4px; margin-bottom: 15px;">
            ‚úì {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div style="background: #f8d7da; color: #721c24; padding: 10px; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 15px;">
            ‚úó {{ message }}
        </div>
    {% endfor %}
    
    <p><strong>Total de categor√≠as:</strong> {{ total }}</p>
    
    <table style="width: 100%; border: 1px solid #ccc; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background: #f5f5f5;">
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">ID</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Nombre</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Descripcion</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Estado</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Fecha</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: center;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for categoria in categorias %}
            <tr>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.getId }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;"><strong>{{ categoria.getNombre }}</strong></td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.getDescripcion ?? '-' }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">
                    <span style="color: {{ categoria.isActivo ? '#28a745' : '#dc3545' }};">
                        {{ categoria.isActivo ? '‚úì Activa' : '‚úó Inactiva' }}
                    </span>
                </td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ categoria.getFechaCreacion|date('d/m/Y H:i', 'America/Guatemala') }}</td>
                <td style="border: 1px solid #ccc; padding: 10px; text-align: center;">
                    <a href="{{ path('categorias_editar', {'id': categoria.getId}) }}" 
                       style="background-color: #17a2b8; color: white; padding: 5px 10px; text-decoration: none; border-radius: 3px; font-size: 12px;">
                        ‚úèÔ∏è Editar
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}