<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sistema de Inventario{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.1) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 600;
        }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
        }

        h1, h2, h3, h4, h5, h6 {
            color: white;
        }

        .text-white-50 {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .btn-light {
            background: white;
            border: none;
            color: #333;
            font-weight: 600;
        }

        .container {
            padding: 20px;
        }

        /* Cards y botones simples */
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
        }

        .btn {
            font-weight: 600;
            border-radius: 8px;
            padding: 8px 16px;
        }

        /* Texto y colores */
        h1, h2, h3, h4, h5, h6 {
            color: white;
        }

        .text-white-50 {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .btn-warning:hover {
            background-color: #b45309;
            color: white;
        }

        .btn-info {
            background-color: var(--info-color);
            color: white;
        }

        .btn-info:hover {
            background-color: #0369a1;
            color: white;
        }

        /* Alertas mejoradas */
        .alert {
            border-radius: 0.75rem;
            border: none;
        }

        /* Tablas mejoradas */
        .table {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .table th {
            background: var(--light-gray);
            border: none;
            font-weight: 600;
            color: var(--dark-color);
        }

        /* Formularios mejorados */
        .form-control, .form-select {
            border-radius: 0.5rem;
            border: 2px solid var(--border-color);
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        /* Animaciones */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .slide-in {
            animation: slideIn 0.6s ease-out;
        }

        /* Responsive improvements */
        @media (max-width: 768px) {
            .content-wrapper {
                padding: 1rem 0;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Navbar profesional -->
        <nav class="navbar navbar-expand-lg custom-navbar sticky-top">
            <div class="container">
                <a class="navbar-brand" href="{{ path('dashboard') }}">
                    <i class="fas fa-cube me-2"></i>
                    InventoryPro
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('dashboard') }}">
                                <i class="fas fa-tachometer-alt me-1"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('categorias_index') }}">
                                <i class="fas fa-tags me-1"></i>
                                Categorías
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('proveedores_index') }}">
                                <i class="fas fa-truck me-1"></i>
                                Proveedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('producto_index') }}">
                                <i class="fas fa-boxes me-1"></i>
                                Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_usuario_index') }}">
                                <i class="fas fa-users me-1"></i>
                                Usuarios
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="content-wrapper">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript personalizado -->
    <script>
        // Agregar clase active al enlace actual
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Animación slide-in para elementos
            const elements = document.querySelectorAll('.card, .alert');
            elements.forEach((el, index) => {
                setTimeout(() => {
                    el.classList.add('slide-in');
                }, index * 100);
            });
        });
    </script>
</body>
</html>