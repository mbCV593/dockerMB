{% extends 'base-simple.html.twig' %}

{% block title %}Dashboard - Sistema de Inventario{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold text-white mb-2">Dashboard Principal</h1>
                <p class="lead text-white-50 mb-0">Bienvenido al Sistema de Inventario Profesional</p>
                <div class="d-flex justify-content-center align-items-center mt-3">
                    <i class="fas fa-calendar-alt text-white-50 me-2"></i>
                    <span class="text-white-50">{{ "now"|date('d/m/Y - H:i') }}</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 bg-primary">
                <div class="card-body p-4 text-white text-center">
                    <i class="fas fa-tags fa-3x mb-3"></i>
                    <h4 class="text-white fw-bold mb-2">Categorías</h4>
                    <p class="text-white-50 mb-4">Administrar las categorías</p>
                    <a href="{{ path('categorias_index') }}" class="btn btn-light btn-sm fw-semibold">
                        Ver Categorías
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 bg-success">
                <div class="card-body p-4 text-white text-center">
                    <i class="fas fa-boxes fa-3x mb-3"></i>
                    <h4 class="text-white fw-bold mb-2">Productos</h4>
                    <p class="text-white-50 mb-4">Gestión del inventario</p>
                    <a href="{{ path('producto_index') }}" class="btn btn-light btn-sm fw-semibold">
                        Ver Productos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 bg-warning">
                <div class="card-body p-4 text-white text-center">
                    <i class="fas fa-truck fa-3x mb-3"></i>
                    <h4 class="text-white fw-bold mb-2">Proveedores</h4>
                    <p class="text-white-50 mb-4">Gestionar proveedores</p>
                    <a href="{{ path('proveedores_index') }}" class="btn btn-light btn-sm fw-semibold">
                        Ver Proveedores
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 bg-info">
                <div class="card-body p-4 text-white text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h4 class="text-white fw-bold mb-2">Usuarios</h4>
                    <p class="text-white-50 mb-4">Gestionar usuarios</p>
                    <a href="{{ path('app_usuario_index') }}" class="btn btn-light btn-sm fw-semibold">
                        Ver Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 bg-secondary">
                <div class="card-body text-center text-white">
                    <h5 class="text-white fw-bold">Sistema Operativo</h5>
                    <p class="text-white-50 small">Funcionando correctamente</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 bg-dark">
                <div class="card-body text-center text-white">
                    <h5 class="text-white fw-bold">Base de Datos</h5>
                    <p class="text-white-50 small">Conectada y actualizada</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 bg-secondary">
                <div class="card-body text-center text-white">
                    <h5 class="text-white fw-bold">Módulos CRUD</h5>
                    <p class="text-white-50 small">Funcionando al 100%</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <h4 class="text-white fw-bold">¡Sistema Funcionando Correctamente!</h4>
            </div>
        </div>
    </div>
</div>
{% endblock %}