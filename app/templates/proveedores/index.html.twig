{% extends 'base.html.twig' %}

{% block title %}Proveedores - Sistema de Inventario{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>üè¢ Gesti√≥n de Proveedores</h1>
        <a 
            href="{{ path('proveedores_nuevo') }}" 
            style="background: #28a745; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;"
        >
            ‚ûï Nuevo Proveedor
        </a>
    </div>

    {# Mostrar mensajes flash #}
    {% for message in app.flashes('success') %}
        <div style="background: #d4edda; color: #155724; padding: 10px; border: 1px solid #c3e6cb; border-radius: 4px; margin-bottom: 15px;">
            ‚úì {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div style="background: #f8d7da; color: #721c24; padding: 10px; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 15px;">
            ‚úó {{ message }}
        </div>
    {% endfor %}
    
    <p><strong>Total de proveedores:</strong> {{ total }}</p>
    
    <table style="width: 100%; border: 1px solid #ccc; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background: #f5f5f5;">
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">ID</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Nombre</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Contacto</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Email</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Tel√©fono</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Estado</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: left;">Fecha</th>
                <th style="border: 1px solid #ccc; padding: 10px; text-align: center;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for proveedor in proveedores %}
            <tr>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ proveedor.getId }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;"><strong>{{ proveedor.getNombre }}</strong></td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ proveedor.getContacto ?? '-' }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ proveedor.getEmail ?? '-' }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ proveedor.getTelefono ?? '-' }}</td>
                <td style="border: 1px solid #ccc; padding: 10px;">
                    <span style="color: {{ proveedor.isActivo ? '#28a745' : '#dc3545' }};">
                        {{ proveedor.isActivo ? '‚úì Activo' : '‚úó Inactivo' }}
                    </span>
                </td>
                <td style="border: 1px solid #ccc; padding: 10px;">{{ proveedor.getCreatedAt|date('d/m/Y H:i', 'America/Guatemala') }}</td>
                <td style="border: 1px solid #ccc; padding: 10px; text-align: center;">
                    <a href="{{ path('proveedores_editar', {'id': proveedor.getId}) }}" 
                       style="background-color: #17a2b8; color: white; padding: 5px 10px; text-decoration: none; border-radius: 3px; font-size: 12px; margin-right: 5px;">
                        ‚úèÔ∏è Editar
                    </a>
                    <form method="post" action="{{ path('proveedores_eliminar', {'id': proveedor.getId}) }}" 
                          style="display: inline;" 
                          onsubmit="return confirm('¬øEst√° seguro de que desea eliminar este proveedor?');">
                        <button type="submit" 
                                style="background-color: #dc3545; color: white; padding: 5px 10px; border: none; border-radius: 3px; font-size: 12px; cursor: pointer;">
                            üóëÔ∏è Eliminar
                        </button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
