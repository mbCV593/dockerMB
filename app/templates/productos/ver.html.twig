{% extends 'base-simple.html.twig' %}

{% block title %}{{ producto.nombre }} - Detalles del Producto{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-eye me-2"></i>
                                Detalles del Producto
                            </h4>
                            <span class="badge bg-light text-dark">#{{ producto.id }}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Navegación -->
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="{{ path('producto_index') }}">Productos</a></li>
                                <li class="breadcrumb-item active">{{ producto.nombre }}</li>
                            </ol>
                        </nav>

                        <!-- Información principal -->
                        <div class="row mb-4">
                            <div class="col-md-8">
                                <h2 class="text-primary">{{ producto.nombre }}</h2>
                                {% if producto.descripcion %}
                                    <p class="text-muted">{{ producto.descripcion }}</p>
                                {% else %}
                                    <p class="text-muted fst-italic">Sin descripción disponible</p>
                                {% endif %}
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="mb-2">
                                    {% if producto.activo %}
                                        <span class="badge bg-success fs-6">Activo</span>
                                    {% else %}
                                        <span class="badge bg-danger fs-6">Inactivo</span>
                                    {% endif %}
                                </div>
                                {% if producto.codigoBarras %}
                                    <div class="text-muted">
                                        <small>
                                            <i class="fas fa-barcode me-1"></i>
                                            {{ producto.codigoBarras }}
                                        </small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Información detallada -->
                        <div class="row">
                            <!-- Precio -->
                            <div class="col-md-6 mb-4">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <i class="fas fa-dollar-sign fa-2x text-success mb-2"></i>
                                        <h4 class="text-success">Q{{ producto.precio|number_format(2) }}</h4>
                                        <p class="card-text text-muted">Precio Unitario</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-6 mb-4">
                                <div class="card border-{{ producto.stock <= producto.stockMinimo ? 'danger' : (producto.stock <= (producto.stockMinimo * 2) ? 'warning' : 'primary') }}">
                                    <div class="card-body text-center">
                                        <i class="fas fa-cubes fa-2x text-{{ producto.stock <= producto.stockMinimo ? 'danger' : (producto.stock <= (producto.stockMinimo * 2) ? 'warning' : 'primary') }} mb-2"></i>
                                        <h4 class="text-{{ producto.stock <= producto.stockMinimo ? 'danger' : (producto.stock <= (producto.stockMinimo * 2) ? 'warning' : 'primary') }}">
                                            {{ producto.stock }} unidades
                                        </h4>
                                        <p class="card-text text-muted">Stock Actual</p>
                                        {% if producto.stock <= producto.stockMinimo %}
                                            <small class="text-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                Stock bajo (mín: {{ producto.stockMinimo }})
                                            </small>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detalles adicionales -->
                        <div class="row">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-info-circle text-primary me-2"></i>
                                    Información Adicional
                                </h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <label class="fw-bold text-muted">Categoría:</label>
                                    <div>
                                        {% if producto.categoria %}
                                            <span class="badge bg-info">
                                                <i class="fas fa-tag me-1"></i>
                                                {{ producto.categoria.nombre }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Sin categoría asignada</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="info-item mb-3">
                                    <label class="fw-bold text-muted">Proveedor:</label>
                                    <div>
                                        {% if producto.proveedor %}
                                            <span class="badge bg-warning">
                                                <i class="fas fa-truck me-1"></i>
                                                {{ producto.proveedor.nombre }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Sin proveedor asignado</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="info-item mb-3">
                                    <label class="fw-bold text-muted">Stock Mínimo:</label>
                                    <div>
                                        <span class="badge bg-secondary">{{ producto.stockMinimo }} unidades</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <label class="fw-bold text-muted">Fecha de Creación:</label>
                                    <div>
                                        <i class="fas fa-calendar-plus text-success me-1"></i>
                                        {{ producto.createdAt|date('d/m/Y H:i') }}
                                    </div>
                                </div>

                                {% if producto.updatedAt %}
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-muted">Última Modificación:</label>
                                        <div>
                                            <i class="fas fa-calendar-edit text-warning me-1"></i>
                                            {{ producto.updatedAt|date('d/m/Y H:i') }}
                                        </div>
                                    </div>
                                {% endif %}

                                {% if producto.codigoBarras %}
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-muted">Código de Barras:</label>
                                        <div>
                                            <code class="bg-light p-1 rounded">{{ producto.codigoBarras }}</code>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Valor total del stock -->
                        <div class="alert alert-light border mt-4">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <i class="fas fa-calculator text-primary fa-2x mb-2"></i>
                                    <h6>Valor Total Stock</h6>
                                    <h4 class="text-primary">Q{{ (producto.precio * producto.stock)|number_format(2) }}</h4>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-percentage text-info fa-2x mb-2"></i>
                                    <h6>Margen Sugerido (30%)</h6>
                                    <h4 class="text-info">Q{{ (producto.precio * 1.3)|number_format(2) }}</h4>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-chart-line text-success fa-2x mb-2"></i>
                                    <h6>Potencial Ganancia</h6>
                                    <h4 class="text-success">Q{{ ((producto.precio * 1.3 - producto.precio) * producto.stock)|number_format(2) }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('producto_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver a Lista
                            </a>
                            <div class="btn-group">
                                <a href="{{ path('producto_editar', {id: producto.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i>
                                    Editar
                                </a>
                                <a href="{{ path('producto_toggle_activo', {id: producto.id}) }}" 
                                   class="btn btn-{{ producto.activo ? 'warning' : 'success' }}"
                                   onclick="return confirm('¿Está seguro de cambiar el estado?')">
                                    <i class="fas fa-{{ producto.activo ? 'ban' : 'check' }} me-1"></i>
                                    {{ producto.activo ? 'Desactivar' : 'Activar' }}
                                </a>
                                <a href="{{ path('producto_eliminar', {id: producto.id}) }}" 
                                   class="btn btn-danger"
                                   onclick="return confirm('¿Está seguro de eliminar este producto? Esta acción no se puede deshacer.')">
                                    <i class="fas fa-trash me-1"></i>
                                    Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
