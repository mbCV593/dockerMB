{% extends 'base-simple.html.twig' %}

{% block title %}Productos - Sistema de Inventario{% endblock %}

{% block body %}
    <!-- Header de sección -->
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="section-title">
                    <i class="fas fa-boxes"></i>
                    Gestión de Productos
                </h1>
                <!-- Navegación rápida -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}" class="text-white-50">Dashboard</a></li>
                        <li class="breadcrumb-item text-white">Productos</li>
                    </ol>
                </nav>
            </div>
            <a href="{{ path('producto_nuevo') }}" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                Nuevo Producto
            </a>
        </div>
    </div>

    <!-- Alertas -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }} me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Lista de productos con header mejorado -->
    <div class="section-header mb-3">
        <h5 class="section-title" style="font-size: 1.2rem; margin-bottom: 0;">
            <i class="fas fa-list me-2"></i>
            Lista de Productos ({{ productos|length }})
        </h5>
    </div>

    <!-- Tabla profesional -->
    <div class="table-container">
        {% if productos|length > 0 %}
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Stock Mín.</th>
                        <th>Categoría</th>
                        <th>Proveedor</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for producto in productos %}
                        <tr>
                            <td>
                                <strong class="badge bg-secondary">#{{ producto.id }}</strong>
                            </td>
                            <td>
                                <strong>{{ producto.nombre }}</strong>
                                {% if producto.codigoBarras %}
                                    <br><small class="text-muted">{{ producto.codigoBarras }}</small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="fw-bold text-success">Q{{ producto.precio|number_format(2) }}</span>
                            </td>
                            <td>
                                {% if producto.stock <= producto.stockMinimo %}
                                    <span class="badge bg-danger">{{ producto.stock }}</span>
                                    <small class="text-danger d-block">Stock bajo</small>
                                {% elseif producto.stock <= (producto.stockMinimo * 2) %}
                                    <span class="badge bg-warning text-dark">{{ producto.stock }}</span>
                                    <small class="text-warning d-block">Stock medio</small>
                                {% else %}
                                    <span class="badge bg-success">{{ producto.stock }}</span>
                                {% endif %}
                            </td>
                            <td><strong>{{ producto.stockMinimo }}</strong></td>
                            <td>
                                {% if producto.categoria %}
                                    <span class="badge bg-info text-dark">{{ producto.categoria.nombre }}</span>
                                {% else %}
                                    <span class="text-muted">Sin categoría</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if producto.proveedor %}
                                    <span class="badge bg-warning text-dark">{{ producto.proveedor.nombre }}</span>
                                {% else %}
                                    <span class="text-muted">Sin proveedor</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if producto.activo %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Activo
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times me-1"></i>Inactivo
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <small>
                                    {{ producto.createdAt|date('d/m/Y') }}
                                    {% if producto.updatedAt %}
                                        <br>Editado: {{ producto.updatedAt|date('d/m/Y') }}
                                    {% endif %}
                                </small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('producto_ver', {id: producto.id}) }}" 
                                       class="btn btn-info btn-sm" 
                                       title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('producto_editar', {id: producto.id}) }}" 
                                       class="btn btn-warning btn-sm" 
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('producto_toggle_activo', {id: producto.id}) }}" 
                                       class="btn btn-{{ producto.activo ? 'secondary' : 'success' }} btn-sm"
                                       data-bs-toggle="modal" 
                                       data-bs-target="#toggleModal"
                                       data-item-id="{{ producto.id }}"
                                       data-item-name="{{ producto.nombre }}"
                                       data-item-action="{{ producto.activo ? 'desactivar' : 'activar' }}"
                                       title="{{ producto.activo ? 'Desactivar' : 'Activar' }}">
                                        <i class="fas fa-{{ producto.activo ? 'ban' : 'check' }}"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal"
                                            data-item-id="{{ producto.id }}"
                                            data-item-name="{{ producto.nombre }}"
                                            data-item-type="producto"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-boxes fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay productos registrados</h4>
                <p class="text-muted">Comienza agregando tu primer producto al inventario</p>
                <a href="{{ path('producto_nuevo') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Crear Primer Producto
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Estadísticas rápidas profesionales -->
    {% if productos|length > 0 %}
        <div class="row mt-4 g-3">
            <div class="col-lg-3 col-md-6">
                <div class="section-header text-center py-3">
                    <h5 class="section-title" style="font-size: 2rem; margin-bottom: 5px;">{{ productos|length }}</h5>
                    <p class="section-stats mb-0">Total Productos</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="section-header text-center py-3" style="background: rgba(40, 167, 69, 0.2);">
                    {% set activos = productos|filter(p => p.activo)|length %}
                    <h5 class="section-title" style="font-size: 2rem; margin-bottom: 5px;">{{ activos }}</h5>
                    <p class="section-stats mb-0">Productos Activos</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="section-header text-center py-3" style="background: rgba(255, 193, 7, 0.2);">
                    {% set stockBajo = productos|filter(p => p.stock <= p.stockMinimo)|length %}
                    <h5 class="section-title" style="font-size: 2rem; margin-bottom: 5px;">{{ stockBajo }}</h5>
                    <p class="section-stats mb-0">Stock Bajo</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="section-header text-center py-3" style="background: rgba(23, 162, 184, 0.2);">
                    {% set sinCategoria = productos|filter(p => p.categoria is null)|length %}
                    <h5 class="section-title" style="font-size: 2rem; margin-bottom: 5px;">{{ sinCategoria }}</h5>
                    <p class="section-stats mb-0">Sin Categoría</p>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Enlaces rápidos profesionales -->
    <div class="mt-4 text-center">
        <div class="section-header">
            <div class="btn-group" role="group">
                <a href="{{ path('dashboard') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Volver al Dashboard
                </a>
                <a href="{{ path('categorias_index') }}" class="btn btn-info">
                    <i class="fas fa-tags me-1"></i>
                    Gestionar Categorías
                </a>
                <a href="{{ path('proveedores_index') }}" class="btn btn-warning">
                    <i class="fas fa-truck me-1"></i>
                    Gestionar Proveedores
                </a>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="text-center mb-3">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-trash-alt text-danger fa-2x"></i>
                        </div>
                    </div>
                    <h6 class="text-center mb-3">¿Estás seguro de que deseas eliminar este <span id="itemType">producto</span>?</h6>
                    <p class="text-center text-muted mb-0">
                        <strong id="itemName"></strong>
                        <br>
                        <small>Esta acción no se puede deshacer.</small>
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary btn-lg px-4" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-trash me-2"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Cambio de Estado -->
    <div class="modal fade" id="toggleModal" tabindex="-1" aria-labelledby="toggleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="toggleModalLabel">
                        <i class="fas fa-toggle-on me-2"></i>
                        Cambiar Estado
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="text-center mb-3">
                        <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-toggle-on text-warning fa-2x"></i>
                        </div>
                    </div>
                    <h6 class="text-center mb-3">¿Estás seguro de que deseas <span id="toggleAction">cambiar</span> este producto?</h6>
                    <p class="text-center text-muted mb-0">
                        <strong id="toggleItemName"></strong>
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary btn-lg px-4" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <a id="toggleForm" class="btn btn-warning btn-lg px-4" href="#">
                        <i class="fas fa-toggle-on me-2"></i>Cambiar Estado
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Configurar el modal de eliminación
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            const deleteForm = document.getElementById('deleteForm');
            const itemName = document.getElementById('itemName');
            const itemType = document.getElementById('itemType');

            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const itemId = button.getAttribute('data-item-id');
                const name = button.getAttribute('data-item-name');
                const type = button.getAttribute('data-item-type');

                itemName.textContent = name;
                itemType.textContent = type;
                deleteForm.action = '/productos/' + itemId + '/eliminar';
            });

            // Configurar el modal de cambio de estado
            const toggleModal = document.getElementById('toggleModal');
            const toggleForm = document.getElementById('toggleForm');
            const toggleItemName = document.getElementById('toggleItemName');
            const toggleAction = document.getElementById('toggleAction');

            toggleModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const itemId = button.getAttribute('data-item-id');
                const name = button.getAttribute('data-item-name');
                const action = button.getAttribute('data-item-action');

                toggleItemName.textContent = name;
                toggleAction.textContent = action;
                toggleForm.href = '/productos/' + itemId + '/toggle-activo';
            });
        });
    </script>
{% endblock %}
