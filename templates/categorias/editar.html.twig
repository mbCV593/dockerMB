{% extends 'base-simple.html.twig' %}

{% block title %}Editar Categoría - Sistema de Inventario{% endblock %}

{% block body %}
    <!-- Header principal -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <div class="bg-warning bg-gradient rounded-3 p-3">
                        <i class="fas fa-edit fa-2x text-dark"></i>
                    </div>
                </div>
                <div>
                    <h1 class="h2 mb-1 text-dark fw-bold">Editar Categoría</h1>
                    <p class="text-muted mb-1">Modificando: {{ categoria.getNombre }}</p>
                    <nav class="breadcrumb-container">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('categorias_index') }}">Categorías</a></li>
                            <li class="breadcrumb-item active">Editar</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <a href="{{ path('categorias_index') }}" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>
                Volver a Categorías
            </a>
        </div>
    </div>

    {# Mostrar mensajes flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            <!-- Formulario principal -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Básica
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="POST" action="{{ path('categorias_actualizar', {'id': categoria.getId}) }}">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-4">
                                    <label for="nombre" class="form-label fw-bold">
                                        <i class="fas fa-tag me-1 text-primary"></i>
                                        Nombre de la Categoría <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-folder"></i>
                                        </span>
                                        <input 
                                            type="text" 
                                            id="nombre" 
                                            name="nombre" 
                                            required 
                                            maxlength="100"
                                            class="form-control form-control-lg"
                                            value="{{ categoria.getNombre }}"
                                            placeholder="Ej: Electrónicos, Oficina, Deportes..."
                                        >
                                    </div>
                                    <div class="form-text">Máximo 100 caracteres</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="descripcion" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1 text-secondary"></i>
                                Descripción
                            </label>
                            <textarea 
                                id="descripcion" 
                                name="descripcion" 
                                rows="4"
                                class="form-control"
                                placeholder="Descripción opcional de la categoría..."
                            >{{ categoria.getDescripcion }}</textarea>
                            <div class="form-text">Descripción opcional</div>
                        </div>

                        <!-- Estado -->
                        <div class="card bg-light mb-4">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-toggle-on me-1 text-success"></i>
                                    Estado de la Categoría
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-check form-switch">
                                    <input 
                                        type="checkbox" 
                                        id="activo" 
                                        name="activo" 
                                        value="1"
                                        class="form-check-input"
                                        {{ categoria.isActivo ? 'checked' : '' }}
                                    >
                                    <label for="activo" class="form-check-label fw-bold">
                                        Categoría activa
                                    </label>
                                </div>
                                <div class="form-text">Las categorías inactivas no aparecerán en los formularios</div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 pt-3 border-top">
                            <button type="submit" class="btn btn-success btn-lg flex-fill">
                                <i class="fas fa-save me-2"></i>
                                Guardar Cambios
                            </button>
                            <a href="{{ path('categorias_index') }}" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-1"></i>
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Información de la categoría -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Información de la categoría
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-primary rounded-pill me-3">ID</div>
                        <span class="fw-bold">#{{ categoria.getId }}</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-success rounded-pill me-3"><i class="fas fa-calendar"></i></div>
                        <div>
                            <small class="text-muted d-block">Creada</small>
                            <span class="fw-bold">{{ categoria.getFechaCreacion|date('d/m/Y H:i') }}</span>
                        </div>
                    </div>
                    {% if categoria.getFechaActualizacion %}
                        <div class="d-flex align-items-center mb-3">
                            <div class="badge bg-warning rounded-pill me-3"><i class="fas fa-clock"></i></div>
                            <div>
                                <small class="text-muted d-block">Última actualización</small>
                                <span class="fw-bold">{{ categoria.getFechaActualizacion|date('d/m/Y H:i') }}</span>
                            </div>
                        </div>
                    {% endif %}
                    <div class="d-flex align-items-center">
                        <div class="badge {{ categoria.isActivo ? 'bg-success' : 'bg-danger' }} rounded-pill me-3">
                            <i class="fas fa-{{ categoria.isActivo ? 'check' : 'times' }}"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Estado</small>
                            <span class="fw-bold text-{{ categoria.isActivo ? 'success' : 'danger' }}">
                                {{ categoria.isActivo ? 'Activa' : 'Inactiva' }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel de ayuda -->
            <div class="card shadow border-0 bg-light">
                <div class="card-header bg-secondary text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Consejos de Edición
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="badge bg-warning rounded-pill me-3 mt-1">!</div>
                        <div>
                            <strong>Cambios importantes</strong>
                            <p class="small text-muted mb-0">Al cambiar el nombre, revisa que no afecte otros productos asociados.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="badge bg-danger rounded-pill me-3 mt-1">⚠</div>
                        <div>
                            <strong>Estado inactivo</strong>
                            <p class="small text-muted mb-0">Las categorías inactivas no se mostrarán en formularios de productos.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
