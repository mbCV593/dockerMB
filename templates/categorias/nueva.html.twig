{% extends 'base-simple.html.twig' %}

{% block title %}Nueva Categoría - Sistema de Inventario{% endblock %}

{% block body %}
    <!-- Header principal -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <div class="bg-warning bg-gradient rounded-3 p-3">
                        <i class="fas fa-plus-circle fa-2x text-dark"></i>
                    </div>
                </div>
                <div>
                    <h1 class="h2 mb-1 text-dark fw-bold">Crear Nueva Categoría</h1>
                    <nav class="breadcrumb-container">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('categorias_index') }}">Categorías</a></li>
                            <li class="breadcrumb-item active">Nueva</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    {# Mostrar mensajes flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <!-- Formulario principal -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Básica
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="POST" action="{{ path('categorias_crear') }}">
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-4">
                                    <label for="nombre" class="form-label fw-bold">
                                        <i class="fas fa-tag me-1 text-primary"></i>
                                        Nombre de la Categoría <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-folder"></i>
                                        </span>
                                        <input 
                                            type="text" 
                                            id="nombre" 
                                            name="nombre" 
                                            required 
                                            maxlength="100"
                                            class="form-control form-control-lg"
                                            placeholder="Ej: Electrónicos, Oficina, Deportes..."
                                        >
                                    </div>
                                    <div class="form-text">Máximo 100 caracteres</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="descripcion" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1 text-secondary"></i>
                                Descripción
                            </label>
                            <textarea 
                                id="descripcion" 
                                name="descripcion" 
                                rows="4"
                                class="form-control"
                                placeholder="Descripción opcional de la categoría..."
                            ></textarea>
                            <div class="form-text">Descripción opcional</div>
                        </div>

                        <div class="d-flex gap-3 pt-3 border-top">
                            <button type="submit" class="btn btn-success btn-lg flex-fill">
                                <i class="fas fa-save me-2"></i>
                                Crear Categoría
                            </button>
                            <a href="{{ path('categorias_index') }}" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-1"></i>
                                Cancelar
                            </a>
                        </div>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                * Campos obligatorios
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-xl-6">
            <!-- Panel de ayuda -->
            <div class="card shadow border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Consejos para Categorías
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="badge bg-success rounded-pill me-3 mt-1">1</div>
                        <div>
                            <strong>Nombre descriptivo</strong>
                            <p class="small text-muted mb-0">Usa nombres claros y específicos que identifiquen fácilmente el tipo de productos.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <div class="badge bg-primary rounded-pill me-3 mt-1">2</div>
                        <div>
                            <strong>Organización</strong>
                            <p class="small text-muted mb-0">Las categorías ayudan a organizar tus productos y facilitan la búsqueda.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="badge bg-warning rounded-pill me-3 mt-1">3</div>
                        <div>
                            <strong>Descripción útil</strong>
                            <p class="small text-muted mb-0">Agrega una descripción que explique qué tipo de productos incluye la categoría.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
